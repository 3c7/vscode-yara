{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "tsc",
            "command": "${workspaceRoot}/node_modules/.bin/tsc",
            "type": "shell",
            "args": ["-p", "${workspaceRoot}"],
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "install",
            "command": "npm",
            "args": ["install"],
        },
        {
            "label": "update",
            "command": "npm",
            "args": ["update"]
        },
        {
            "label": "test",
            "command": "npm",
            "args": ["run", "test"],
            "group": "test"
        }
    ]
}